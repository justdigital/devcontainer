{
  "name": "justdigital/devcontainer",
  // use dockerfile to build dev container
  "build": {
    "dockerfile": "Dockerfile"
  },
  // forward common development ports
  "forwardPorts": [
    3000,
    3001
  ],
  "appPort": [
    3000,
    3001
  ],
  // install project dependencies after container is created
  "postCreateCommand": "npm install",
  // use zsh on integrated shell
  "settings": {
    "terminal.integrated.shell.linux": "/usr/bin/zsh"
  },
  // config to make docker work inside container
  "runArgs": [
    "--init"
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind"
  ],
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },
  "extensions": [
    "christian-kohler.npm-intellisense",
    "christian-kohler.path-intellisense",
    "dbaeumer.vscode-eslint",
    "dracula-theme.theme-dracula",
    "eamodio.gitlens",
    "editorconfig.editorconfig",
    "eg2.vscode-npm-script",
    "esbenp.prettier-vscode",
    "felixfbecker.php-pack",
    "github.vscode-pull-request-github",
    "mikestead.dotenv",
    "ms-azuretools.vscode-docker",
    "ms-vsliveshare.vsliveshare",
    "redhat.vscode-yaml",
    "visualstudioexptteam.vscodeintellicode",
    "vivaxy.vscode-conventional-commits",
    "yzhang.markdown-all-in-one",
  ]
}